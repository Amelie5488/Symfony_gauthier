			<button name="create" type="submit" class="w-[70%] text-white bg-green-900 hover:bg-green-600 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Creer un compte</button>
		</article>

	
	{{ form_end(registrationForm) }}

