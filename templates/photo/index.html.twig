{% extends 'base.html.twig' %}

{% block title %}Hello PhotoController!{% endblock %}

{% block body %}



<section class="grid grid-cols-1 md:grid-cols-3 place-items-center gap-6 m-8">
    {% for photo in image %} 
<div class="w-full h-full bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 p-4 flex flex-col justify-between divide-y divide-gray-200 mb-4">
    <a href="{{ path('app_commentaire', {id:photo.id, slug:photo.slug}) }}">
        <img class="rounded-lg mb-4 w-full h-[45vh] object-cover"  src="{{asset(photo.lien)}}" alt="product image" />
    </a>
    <div class="px-5 pb-5 ">
        <a href="#">
            <h5 class="text-4xl font-semibold tracking-tight text-gray-900 dark:text-white no-underline hover:underline mb-4 mt-4">{{ photo.nom }}</h5>
            <p>{{ photo.description }}</p>
        </a>

        <div class="flex items-center justify-between ">
            <span class="text-3xl font-bold text-gray-900 dark:text-white">{{ photo.prix }}â‚¬</span>
            <a href="{{ path('app_panier_add', {id:photo.id, slug:photo.slug} )}} " class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">download</a>
        </div>
    </div>
</div>
{% endfor %}
</section>




{% endblock %}
