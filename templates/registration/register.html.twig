{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<section class="w-full flex flex-col md:flex-row justify-center gap-2 p-3 mt-5 ">
		<article class="w-full md:w-1/2 p-3 flex flex-col items-center">
			<h2 class=" mt-5 mb-5 text-3xl font-extrabold text-gray-400 dark:text-white md:text-5xl lg:text-6xl pb-5">Cr√©er un compte</h2>

			{{ form_errors(registrationForm) }}

			{{ form_start(registrationForm, {"attr" : {"class":"flex flex-col items-center w-full gap-5"}})}}
			{{ form_widget(registrationForm.email)}}
			{{ form_widget(registrationForm.nom) }}
			{{ form_widget(registrationForm.prenom) }}
			{{ form_widget(registrationForm.pseudo) }}
			{{ form_widget(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
